<xml>
    <object name="SLAMSettings" singleinstance="true" settings="true">
        <description>Configuration for the OpenCV based SLAM algorithm running on SimPosix (for example on overo)</description>
	<field name="FrameDimensions" units="pixels" type="uint16" elementnames="x,y" defaultvalue="640,480" />
	<field name="FrameRate" units="1/s" type="float" elements="1" defaultvalue="30" />
	<access gcs="readwrite" flight="readwrite"/>
	<telemetrygcs acked="true" updatemode="onchange" period="0"/>
	<telemetryflight acked="true" updatemode="onchange" period="0"/>
	<logging updatemode="manual" period="0"/>
    </object>
</xml>
